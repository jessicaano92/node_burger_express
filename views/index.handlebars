<h1>Eat-Da-Burger</h1>

<ul>
  {{#each burgers}}
   <li>
       <p>
           {{this.id}}. {{this.burger_name}}

           <button data-burgerid="{{this.id}}" class="delburger">Delete</button>
       </p>
   </li>
   {{/each}}
</ul>


<h2>Add a Burger</h2>
<form class="create-form">
    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <!--finish burger stuff-->
    </div>
</form>



